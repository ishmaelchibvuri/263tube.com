<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow user-installed certificates for debug builds -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user-added certificates (like mkcert) -->
            <certificates src="user" />
            <!-- Also trust system certificates -->
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>

    <!-- Development server configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.105</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <trust-anchors>
            <!-- Trust user-added certificates -->
            <certificates src="user" />
            <!-- Trust system certificates -->
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
